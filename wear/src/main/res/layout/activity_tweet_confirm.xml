<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WearTweetConfirmActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_tweet_confirm"
        android:id="@+id/text"
        android:textSize="20dp"
        android:layout_above="@+id/delayed_confirm"
        android:layout_centerHorizontal="true" />

    <android.support.wearable.view.DelayedConfirmationView
        android:id="@+id/delayed_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_full_cancel"
        android:layout_gravity="center"
        app:circle_border_width="8dp"
        app:circle_color="@color/blue"
        app:circle_border_color="@color/light_grey"
        app:circle_radius="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>
